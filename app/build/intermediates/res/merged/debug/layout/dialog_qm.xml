<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >

    <LinearLayout
        android:layout_marginTop="23px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="29px"
            android:gravity="center"
            android:padding="17px"
            android:background="@drawable/shape_grey_4px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jiacu"
            android:layout_weight="1"
            android:text="加粗"/>
        <TextView
            android:layout_marginLeft="24px"
            android:gravity="center"
            android:padding="17px"
            android:background="@drawable/shape_grey_4px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bianxi"
            android:layout_weight="1"
            android:text="加细"/>
        <TextView
            android:textColor="@color/editBlue"

            android:layout_marginRight="29px"
            android:layout_marginLeft="24px"
            android:gravity="center"
            android:padding="17px"
            android:background="@drawable/shape_blue_4px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chongqian"
            android:layout_weight="1"
            android:text="重签"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="545px"/>

    <include layout="@layout/include_save_quit"/>

</LinearLayout>