<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/iv_label"
            android:layout_width="8px"
            android:layout_height="match_parent"
            android:background="@color/planRed"/>

        <TextView
            android:id="@+id/tv_wzmc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="25px"
            android:text="服务器"
            android:textColor="@color/black"
            android:textSize="30px"
            />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="25px"
            android:background="@drawable/shape_button_plan"
            android:gravity="center"
            android:padding="8px"
            android:text="计划"
            android:textColor="@color/white"/>
    </LinearLayout>

    <include layout="@layout/line"></include>

    <LinearLayout
        android:id="@+id/ll_kpbh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/asset_tv_left22width114"
            android:text="编　　号"/>

        <TextView
            android:id="@+id/tv_kpbh"
            style="@style/asset_tv_left38"
            android:gravity="center"
            android:text="11111111111111"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/asset_tv_left22width114"
            android:text="旧  编  号"/>

        <TextView
            android:id="@+id/tv_oldkpbh"
            style="@style/asset_tv_left38"
            android:gravity="center"
            android:text="11111111111111"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/asset_tv_left22width114"
            android:text="出厂编号"/>

        <TextView
            android:id="@+id/tv_sn"
            style="@style/asset_tv_left38"
            android:gravity="center"
            android:text="11111111111111"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/asset_tv_left22width114"
            android:text="规格型号"/>

        <TextView
            android:id="@+id/tv_ggxh"
            style="@style/asset_tv_left38"
            android:gravity="center"
            android:text="11111111111111"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/asset_tv_left22width114"
            android:text="品牌名称"/>

        <TextView
            android:id="@+id/tv_ppmc"
            style="@style/asset_tv_left38"
            android:gravity="center"
            android:text="11111111111111"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/asset_tv_left22width114"
            android:text="开始时间"/>

        <TextView
            android:id="@+id/tv_kssj"
            style="@style/asset_tv_left38"
            android:gravity="center"
            android:text="11111111111111"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/asset_tv_left22width114"
            android:text="结束时间"/>

        <TextView
            android:id="@+id/tv_jssj"
            style="@style/asset_tv_left38"
            android:gravity="center"
            android:text="11111111111111"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/asset_tv_left22width114"
            android:text="科室名称"/>

        <TextView
            android:id="@+id/tv_dept"
            style="@style/asset_tv_left38"
            android:gravity="center"
            android:text="11111111111111"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/asset_tv_left22width114"
            android:text="位　　置"/>

        <TextView
            android:id="@+id/tv_location"
            style="@style/asset_tv_left38"
            android:gravity="center"
            android:text="11111111111111"
            />
    </LinearLayout>

    <include

        layout="@layout/include_devide"/>


</LinearLayout>