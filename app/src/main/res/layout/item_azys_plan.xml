<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="24px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/text_azys_item"
                android:text="设 备 名 称 :"/>

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_azys_item"
                android:layout_width="wrap_content"
                android:layout_marginLeft="14px"
                android:text="手术床"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="15px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/text_azys_item"
                android:text="合 同 编 号 :"/>

            <TextView
                android:id="@+id/tv_htbh"
                style="@style/text_azys_item"
                android:layout_width="wrap_content"
                android:layout_marginLeft="14px"
                android:singleLine="true"
                android:text="HT11111111111111"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="0px"
            android:layout_marginTop="15px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/text_azys_item"
                android:text="供应商名称 :"/>

            <TextView
                android:id="@+id/tv_gysmc"
                style="@style/text_azys_item"
                android:layout_width="wrap_content"
                android:layout_marginLeft="14px"
                android:text="深圳市百康立有限公司"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="0px"
            android:layout_marginTop="15px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/text_azys_item"
                android:text="使 用 科 室 :"/>

            <TextView
                android:id="@+id/tv_dept"
                style="@style/text_azys_item"
                android:layout_width="wrap_content"
                android:layout_marginLeft="14px"
                android:text="所有科室"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:background="@drawable/backgrey_wing"
            android:layout_margin="24px"
            android:layout_width="672px"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_all"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="总数(10)"
                android:textSize="27px"/>
            <TextView
                android:id="@+id/tv_check"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="已验(10)"
                android:textSize="27px"/>
            <TextView
                android:id="@+id/tv_uncheck"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="未验(10)"
                android:textSize="27px"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>