<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="560px"
                android:layout_height="640px"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/no_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_nopic"/>


    <uk.co.senab.photoview.PhotoView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="640px"
        />

    <TextView
        android:id="@+id/tv_add_pic"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_alignParentBottom="true"
        android:background="#22313131"
        android:gravity="center"
        android:text="添加图片"
        android:textColor="@color/white"
        android:textSize="28px"/>

    <ImageView

        android:src="@mipmap/ic_del_pic"
        android:id="@+id/iv_delete"
        android:layout_width="61px"
        android:layout_height="61px"
        app:layout_auto_basewidth="width"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>